{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"removeComments": true,
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"strict": true,
		"paths": {
			"*": [
				"node_modules/*"
			]
		}
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"**/*.test.ts",
		"**/*.spec.ts"
	]
}